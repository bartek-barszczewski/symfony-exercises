{% extends 'location/layout/layout.html.twig' %}

{% block title %}
	Weather App
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block custom_styles %}
	{{ parent() }}
{% endblock %}

{% block header %}
	<header>
		<nav class="navbar navbar-expand-lg fixed-top bg-body-tertiary bg-primary " data-bs-theme="dark">
			<div class="container-fluid">
				<a class="navbar-brand text-white" href="{{ url("app_location_home") }}">WeatherApp</a>
                <button 
                    class="navbar-toggler" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#weatherAppMenu"
                    aria-controls="weatherAppMenu"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <i class="bi bi-list"></i>
                </button>

                <div class="collapse navbar-collapse" id="weatherAppMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ url("app_location_panel_index") }}"> Location panel </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ url("app_forecast_panel_index") }}"> Forecast panel </a>
                        </li>
                    </ul>
                </div>
            </div>
		</nav>
    </header>


    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
