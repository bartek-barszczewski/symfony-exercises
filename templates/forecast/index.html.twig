{% extends 'forecast/layout/layout.html.twig' %}

{% block navigation %}
	<div class="container-fluid">
		<div class="row">
			<nav class="navbar navbar-expand-lg bg-body-tertiary">
				<div class="container-fluid">
					<a class="navbar-brand" href="#">
						WeatherForecast
					</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="#">
									Home

								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">
									Link

								</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Locations

								</a>
								<ul class="dropdown-menu">
									{% for key, data in navigation %}

										{% for cc, ccData in data %}

											{% for city, link in ccData %}
												<li>
													<a class="dropdown-item" href="{{ link }}">
														{{ cc }}
														/
														{{ city }}
													</a>
												</li>
											{% endfor %}
											<li>
												<hr class="dropdown-divider"></li>
										{% endfor %}
									{% endfor %}
								</ul>
							</li>
							<li class="nav-item">
								<a class="nav-link disabled" aria-disabled="true">
									Disabled

								</a>
							</li>
						</ul>
						<form class="d-flex" role="search">
							<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
							<button class="btn btn-outline" type="submit">
								Search

							</button>
						</form>
					</div>
				</div>
			</nav>
		</div>
	</div>
{% endblock %}

{% block content %}
	<div class="container-fluid" id="container">
		<div class="row text-center py-5">
			<br/>
			<h1>
				Forecast for
				{{ city }}
				,
				{{ cc }}
			</h1>
			<br/>
		</div>
		<div class="row">
			<div class="container d-md-flex justify-content-center flex-wrap">
				{% for day, forecast in forecast %}
					<div class="col-sx-12 col-md-3 card p-4 m-4">
						<div class="card-body">
							<div class="d-flex justify-content-between">
								{% for key, data in forecast %}
									{% if loop.first %}
										{{data}}
									{% endif %}
								{% endfor %}
								<div>
									{% for key, data in forecast %}
										{% if key == 'date' %}
											{{data}}
										{% endif %}
									{% endfor %}
								</div>

							</div>
							<div class="d-flex justify-content-around">
								<div>
									{% for key, data in forecast %}
										{% if key == 'icon' %}
											<i class="bi bi-{{ data }}"></i>
										{% endif %}
									{% endfor %}
									
								</div>
								<div>
									<span class="temp">
										{% for key, data in forecast %}
											{% if key == 'temperature' %}
												{{ data }}°C
											{% endif %}
											{% if key == 'feels_like' %}
												<h5> Feels like {{ data }}°C </h5>
											{% endif %}
											
										{% endfor %}
									</span>
								</div>
							</div>
							<div class="d-flex justify-content-between"></div>
						</div>
						<div class="container p-4">
							<div class="d-flex flex-column">
									{% for key, data in forecast %}
										{% if key != 'icon' and key != 'temperature' and key != 'date' and not loop.first and key != 'feels_like' %}
										<div class="d-flex justify-content-between">
											<div>
												{{key}}
											</div>
											<div>
												{{ data }}
											</div>
										</div>
										{% endif %}
									{% endfor %}
								
							</div>
						</div>
					</div>

				{% endfor %}
			</div>
		</div>
	{% endblock %}

