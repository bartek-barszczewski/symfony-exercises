{% extends 'location/index.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    
    <div class="pt-5">
        <div class="py-5 text-center">
            <h1>Location manager panel</h1>
        </div>
    <div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>CountryName</th>
                <th>Cc</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.city }}</td>
                <td>{{ location.countryName }}</td>
                <td>{{ location.cc }}</td>
                <td>{{ location.latitude }}</td>
                <td>{{ location.longitude }}</td>
                <td>
                    <a href="{{ path('app_location_panel_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('app_location_panel_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_location_panel_new') }}">Create new</a>

    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
