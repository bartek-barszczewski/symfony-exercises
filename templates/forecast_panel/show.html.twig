{% extends 'base.html.twig' %}

{% block title %}Forecast{% endblock %}

{% block body %}
    <h1>Forecast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forecast.id }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ forecast.temperature }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ forecast.pressure }}</td>
            </tr>
            <tr>
                <th>Wind_speed</th>
                <td>{{ forecast.windSpeed }}</td>
            </tr>
            <tr>
                <th>Cloud</th>
                <td>{{ forecast.cloud ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Sun</th>
                <td>{{ forecast.sun ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Rain</th>
                <td>{{ forecast.rain ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Snow</th>
                <td>{{ forecast.snow ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ forecast.date ? forecast.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_forecast_panel_index') }}">back to list</a>

    <a href="{{ path('app_forecast_panel_edit', {'id': forecast.id}) }}">edit</a>

    {{ include('forecast_panel/_delete_form.html.twig') }}
{% endblock %}
